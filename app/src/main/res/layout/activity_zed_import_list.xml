<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZedImportList">

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="0dp"
        android:headerBackground="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/btnSavaZedImport"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline11"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <EditText
        android:id="@+id/etRsult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline11"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/datePicker"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/datePicker" />

    <Button
        android:id="@+id/btnSavaZedImport"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-56dp"
        android:background="@color/colorPrimary"
        android:text="save"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/etRsult"
        app:layout_constraintLeft_toRightOf="@+id/etRsult"
        app:layout_constraintTop_toTopOf="@+id/etRsult"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>