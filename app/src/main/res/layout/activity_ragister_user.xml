<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RagisterUser">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/barcode_scan" />

    <EditText
        android:id="@+id/etNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.503" />

    <EditText
        android:id="@+id/etPhoneUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="phone"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/etNameUser"
        app:layout_constraintRight_toRightOf="@+id/etNameUser"
        app:layout_constraintTop_toBottomOf="@+id/etNameUser"
        app:layout_constraintHorizontal_bias="0.952"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/etPhoneUser"
        app:layout_constraintRight_toRightOf="@+id/etPhoneUser"
        app:layout_constraintTop_toBottomOf="@+id/etPhoneUser"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp" />

    <EditText
        android:id="@+id/etPasword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="pasword"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/etEmail"
        app:layout_constraintRight_toRightOf="@+id/etEmail"
        app:layout_constraintTop_toBottomOf="@+id/etEmail"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/btnSaveUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="save"
        app:layout_constraintTop_toBottomOf="@+id/etPasword"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/etPasword"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/etPasword" />


</android.support.constraint.ConstraintLayout>